<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFD700"
        app:titleTextColor="#000000"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        ></androidx.appcompat.widget.Toolbar>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="bottom">
       <FrameLayout
           android:id="@+id/fragment_content"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_above="@+id/bottomBar"/>
       <RadioGroup
           android:id="@+id/bottomBar"
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:gravity="bottom"
           android:layout_alignParentBottom="true"
           android:background="#FFFFFF"
           android:orientation="horizontal">
           <RadioButton
               android:id="@+id/bottom1"
               style="@style/Bottom.TabRadioButton"
               android:drawableTop="@drawable/buttom_btn_icon1"
               android:checked="true"
               android:text="明细"/>
           <RadioButton
               android:id="@+id/bottom2"
               style="@style/Bottom.TabRadioButton"
               android:drawableTop="@drawable/buttom_btn_icon2"
               android:text="图表"/>

           <View style="@style/Bottom.TabRadioButton"/>
           <RadioButton
               android:id="@+id/bottom3"
               style="@style/Bottom.TabRadioButton"
               android:drawableTop="@drawable/buttom_btn_icon3"
               android:text="关于"/>
           <RadioButton
               android:id="@+id/bottom4"
               style="@style/Bottom.TabRadioButton"
               android:drawableTop="@drawable/buttom_btn_icon4"
               android:text="我的"/>
           />
       </RadioGroup>
       <ImageView
           android:id="@+id/sign_iv"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_above="@+id/txt"
           android:layout_centerHorizontal="true"
           android:background="@android:color/transparent"
           android:src="@mipmap/change1" />
       <TextView
           android:id="@+id/txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/txt1"
           android:layout_centerHorizontal="true"
           android:textColor="#000000"
           android:text="记账"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="6sp"/>

   </RelativeLayout>

</LinearLayout>